<div style="margin: 20px">
  <h1 style><%= @restaurant.name %></h1>
  <h3><%= @restaurant.category %></h3>
    <p><%= @restaurant.address %></p>
  <ul class="list-group">
    <li class="list-group-item"><%= link_to "Delete",
              restaurant_path(@restaurant),
              method: :delete,
              data: { confirm: "Are you sure?" }%></li>
    <li class="list-group-item"><%= link_to 'Add new review', new_restaurant_review_path(@restaurant) %></li>
    <li class="list-group-item"><%= link_to 'Back', '/restaurants' %></li>
  </ul>
  <br>
  <ul class="list-group">
  <% @restaurant.reviews.each do |review|%>
    <li class="list-group-item"><%= review.rating %> --- <%= review.content %></li>
  <%end%>
  </ul>
</div>
